<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.bustogoappliction.Mainmenu"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="382dp"
        android:layout_height="566dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteY="-22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#abd938"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imva"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.22"
                android:background="#9bd6d4"
                android:onClick="imva"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/busonenikekek" />

            <ImageView
                android:id="@+id/imvb"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.22"
                android:background="#ff9010"
                android:onClick="imvb"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imva"
                app:srcCompat="@drawable/roadorforfun" />

            <ImageView
                android:id="@+id/imvc"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:background="#abd938"
                android:onClick="imvc"
                app:layout_constraintBottom_toTopOf="@+id/imvd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imvb"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/uuusdafasd" />

            <ImageView
                android:id="@+id/imvd"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.22"
                android:background="#a9aba2"
                android:onClick="imvd"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/newsone"
                tools:layout_editor_absoluteY="421dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.22"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imvd"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="?attr/colorControlHighlight" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
